# 실행 모드
PRODUCTION=False  # True: 프로덕션 모드 (빌드된 파일 서빙), False: 개발 모드 (별도 Vite 서버)

# Flask 백엔드 설정
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=False
# ⚠️ 프로덕션에서는 반드시 강력한 SECRET_KEY로 변경하세요!
# 생성 방법: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Vite 프론트엔드 설정 (개발 모드에서만 사용)
VITE_PORT=5173

# 세션 설정
SESSION_LIFETIME=3600  # 세션 타임아웃 (초 단위, 기본: 1시간)
SESSION_COOKIE_SECURE=False  # HTTPS 사용 시 True로 설정

# 데이터 디렉토리
DATA_DIR=data

# Palworld 플러그인 설정
PALWORLD_SHUTDOWN_WAIT_TIME=30  # 서버 종료 대기 시간 (초 단위, 기본: 30초)

# 로그 로테이션 설정
LOG_MAX_BYTES=10485760  # 로그 파일 최대 크기 (바이트, 기본: 10MB)
LOG_BACKUP_COUNT=5  # 유지할 백업 파일 수 (기본: 5개)
LOG_RETENTION_DAYS=30  # 로그 보관 기간 (일 단위, 기본: 30일)
LOG_CHECK_INTERVAL=3600  # 로테이션 체크 간격 (초 단위, 기본: 1시간)

# Waitress WSGI 서버 설정 (프로덕션)
WAITRESS_THREADS=8  # 워커 스레드 수 (기본: CPU * 2, 최소 4)
WAITRESS_CHANNEL_TIMEOUT=120  # 채널 타임아웃 (초, 기본: 120)
WAITRESS_CONNECTION_LIMIT=100  # 최대 동시 연결 수 (기본: 100)
WAITRESS_RECV_BYTES=8192  # 수신 버퍼 크기 (바이트, 기본: 8KB)
WAITRESS_SEND_BYTES=8192  # 송신 버퍼 크기 (바이트, 기본: 8KB)

# Windows PC 단일 서버 최적화 설정
PROCESS_MONITOR_INTERVAL=3  # 프로세스 모니터링 간격 (초, 기본: 3초)
DB_POOL_SIZE=5  # DB 연결 풀 크기 (기본: 5개)
JOB_QUEUE_WORKERS=2  # 작업 큐 워커 수 (기본: 2개)
METRIC_COLLECTION_INTERVAL=1  # 메트릭 수집 간격 (초, 기본: 1초)
